<main>
<div class="container">

  <h3>ジャンル編集</h3>

  <div class="row">
      <div class="genre_edit_field">
        <%= form_with model: @genre, url: admins_genre_path(@genre), method: :patch do |f| %>
        <strong>ジャンル名　</strong>
        <%= f.text_field :genres_name, :size=>"30" %>

        <u class="new_botton ml-5">
          <input type="submit" name="commit" value="変更を保存" class="btn btn-success" data-disable-with="Update Genre">
        </u>
　      <% end %>
  </div>

</div>
</main>