<main>
<div class="container">
  <div class="row">

    <div class="display-2 mt-4 pb-3">
      <h3>注文履歴一覧</h3>
    </div>

  <table class="order-table table mb-5">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td style="width: 20%"><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(order.id) %></td>
          <td>
            <%= order.customer.last_name %><%= order.customer.first_name %>
          </td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
    <%= paginate @orders %>

  </div>
</div>
</main>