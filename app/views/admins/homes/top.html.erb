<h1>注文履歴一覧</h1>

<div class="container">
  <h3>注文履歴一覧</h3>
  <table class="order-table table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(order.id) %></td>
          <td>
            <%= order.customer.last_name %><%= order.customer.first_name %>
          </td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
    <%= paginate @orders %>
</div>