<main>
<div class="container">
  <div class="row">

    <div class="display-2  mt-4 pb-3">
      <h3>商品詳細</h3>
    </div>

    <div class="container">
      <div class="items-show_list">
          <%= image_tag @item.get_image, :size =>"250x230" %>

        <table class="items-show_list_text">
          <tbody>
            <tr>
              <th>商品名</th>
              <td><%= @item.item_name %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= @item.item_introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.genres_name %></td>
            </tr>
            <tr>
              <th>税込価格(税抜価格)</th>
              <td><%= @item.price.to_s(:delimited) %>(<%= @item.add_tax_price.to_s(:dalimited) %>) 円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
                <% if @item.is_active %>
                    販売中
                <% elsif %>
                    販売停止中
                <% end %>
              </td>
            </tr>

          </tbody>
        </table>
      </div>

      <div class="text-center">
        <%= link_to "編集する", edit_admins_item_path(@item.id), class:"btn btn-success" %>
      </div>
    </div>

  </div>
</div>
</main>
