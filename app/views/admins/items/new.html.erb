<main>
<div class="container">
  <div class="row">

      <div class="display-2  mt-4 pb-3">
        <h3>商品新規登録</h3>
      </div>

    <%= form_with model: @item, url: admins_items_path do |f| %>
  <table class="order-table table mb-5">
    <tbody>
      <tr>
        <th>商品画像</th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :item_name, :size=>"40" %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :item_introduction, :size=>"43x7" %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :genres_name %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :price, :size=>"40" %> 円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <%= f.radio_button :is_active, "true" %>販売中
          <%= f.radio_button :is_active, "false" %>販売停止中
        </td>
      </tr>
    </tbody>
  </table>


          <%= f.submit '新規登録' %>


    <% end %>

  </div>
</div>
</main>