<main>
<div class="container">
  <div class="row">

    <div class="container mt-4 pb-3">
      <div class="display-2">
        <h3>商品一覧</h3>
      </div>
      <div class="text-right">
        <%= link_to "＋", new_admins_item_path, class:"btn btn-outline-secondary rounded-circle p-0", style:"width:2rem;height:2rem;" %>
      </div>
    </div>

  <table class="order-table table mb-5">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <% @items.each do |item| %>
      <tbody>
        <tr>
          <td style="width: 10%"><%= item.id %></td>
          <td style="width: 30%"><%= link_to item.item_name, admins_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.genres_name %></td>
          <td>
            <% if item.is_active %>
                <div class="text-success">販売中</div>
            <% elsif %>
                販売停止中
            <% end %>
          </td>
        </tr>
      </tbody>
<% end %>
</table>
<%= paginate @items %>

  </div>
</div>
</main>