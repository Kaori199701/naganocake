<div class="container">
 <div class="row">

    <div class="display-2 mt-3 pb-3">
      <h2>管理者登録</h2>
    </div>


    <div class="container pl-5 mb-5">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

 <ul class="ipt-layout">
  <li class="row row-flex-align-c-ld">
    <div class="col-ld-9 col-md-24 col-sd-24 col-fit">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-ld-13 col-md-21 col-sd-24 col-justify-l col-sd-justify-r">
      <%= f.email_field :email, :size=>"30" %>
    </div>
  </li>
 </ul>

 <ul class="ipt-layout">
  <li class="row row-flex-align-c-ld">
    <div class="col-ld-9 col-md-24 col-sd-24 col-fit">
        <%= f.label :パスワード%>
    </div>
    <div class="col-ld-13 col-md-21 col-sd-24 col-justify-l col-sd-justify-r">
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
      <% end %>
        <%= f.password_field :password, :size=>"30" %>
    </div>
  </li>
 </ul>

 <ul class="ipt-layout">
  <li class="row row-flex-align-c-ld">
    <div class="col-ld-9 col-md-24 col-sd-24 col-fit">
      <%= f.label :"パスワード(確認用)" %>
    </div>
    <div class="col-ld-13 col-md-21 col-sd-24 col-justify-l col-sd-justify-r">
      <%= f.password_field :password_confirmation, :size=>"30" %>
    </div>
  </li>
 </ul>

  <div class="actions">
    <input type="submit" name="commit" value="サインイン" class="btn btn-sm btn-primary" data-disable-with="Sign up">
  </div>
<% end %>

  <%= render "admins/shared/links" %>
    </div>
 </div>
</div>
