<div class="container">
  <div class="row">
    <div class="display-2 ml-5 mt-3 pb-3">
      <h3>新規会員登録</h3>
    </diV>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "publics/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %>
        (<%= f.label :姓 %>)
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        (<%= f.label :名 %>)
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :フリガナ %>
        (<%= f.label :セイ %>)
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        (<%= f.label :メイ %>)
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :郵便番号 %>(ハイフンなし)
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>

      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :電話番号 %>(ハイフンなし)
        <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>(<%= @minimum_password_length %>文字以上)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>(確認用)
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <input type="submit" name="commit" value="新規登録" class="btn btn-sm btn-success" data-disable-with="Sign up">
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12 ml-5 mt-3">
      <h3>既に登録済みの方</h3>
    </div>

      <%= link_to  new_customer_session_path, class:"nav-link text-primary" do %>
        こちら
      <% end %>
      からログインしてください。

  </div>

</div>
