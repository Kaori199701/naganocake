<main>
<div class="container">
  <div class="row">

    <!-- ジャンル選択のサイドバー -->
    <div class="col-lg-2">
      <%= render 'publics/genre', post_images: @genres %>
    </div>
    <!-- ジャンル選択のサイドバー -->

    <div class="col-lg-10">
    <div class="item-index">
    <h3>商品一覧</h3>
        <table>
          <tbody>
            <tr class="item-box">
              <% @genre.items.each do |item| %>
                <td class="item">
                    <%= link_to publics_item_path(item) do %>
                      <%= image_tag item.get_image, :size =>"190x150" %><br>
                      <%= item.item_name %><br>
                      ￥<%= item.price %>
                    <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
    </div>

  </div>
</div>
</main>