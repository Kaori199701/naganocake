<main>
<div class="container">
  <h3>配送先登録/一覧</h3>

  <div class="row mt-4 mb-4">
    <%= form_with model: @address, url: publics_addresses_path do |f| %>
      <table>
        <tbody>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>宛名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <u class="new_botton ml-5">
                <%= f.submit '新規登録', class:"btn btn-success" %>
              </u>
            </td>
          </tr>
        </tbody>
      </table>

    <% end %>
  </div>

  <table class="order-table table mb-5">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛先</th>
          <th></th>
        </tr>
      </thead>

      <% @addresses.each do |address| %>
      <tbody>
        <tr>
          <td style="width: 20%"><%= address.postal_code %></td>
          <td style="width: 30%"><%= address.address %></td>
          <td style="width: 20%"><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_publics_address_path(address.id), class:"btn btn-success" %>
            <%= link_to "削除する", publics_address_path(address.id), method: :delete, class:"btn btn-danger" %>
          </td>
        </tr>
      </tbody>
      <% end %>
  </table>

</div>
</main>