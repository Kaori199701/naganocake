<h1>配送先登録/一覧</h1>


<%= form_with model: @address, url: publics_addresses_path do |f| %>

<p>郵便番号(ハイフンなし)</p>
  <%= f.text_field :postal_code %>

<p>住所</p>
  <%= f.text_field :address %>

<p>宛名</p>
  <%= f.text_field :name %>


  <%= f.submit '新規登録' %>
<% end %>


<p>郵便番号</p>

<p>住所</p>

<p>宛先</p>

<p>編集する</p>
<p>削除する</p>

  <table class="table">
      <tboby>
      <% @addresses.each do |address| %>
        <tr>
         <th>郵便番号</th>
         <th><%= address.postal_code %></th>
         <th>住所</th>
         <th><%= address.address %></th>
         <th>宛先</th>
         <th><%= address.name %></th>
         <th><%= link_to "編集する", edit_publics_address_path(address.id) %></th>
         <th><%= link_to "削除する", publics_address_path(address.id), method: :delete, class:"btn btn-sm btn-danger" %></th>
        </tr>
      <% end %>
      </tbody>
  </table>