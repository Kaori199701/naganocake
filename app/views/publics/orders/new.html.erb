<main>
<div class="container">

  <div class="display-2 ml-5 mt-4 pb-3">
    <h3>注文情報入力</h3>
  </div>

<div class="container">
  <%= form_with model: @order, url: publics_orders_confirm_path, local: true do |f| %>
    <div>
      <h3><%= f.label :payment_method, "支払方法" %></h3>
        <div class="row ml-5">
          <div class="col-lg-8">
            <%= f.radio_button :payment_method, "クレジットカード", checked: "checked" %>
            <%= f.label :payment_method, "クレジットカード" %>
          </div>
        <br>
          <div class="col-lg-8">
            <%= f.radio_button :payment_method, "銀行振込" %>
            <%= f.label :payment_method, "銀行振込" %>
          </div>
        </div>
    </div>

    <div class="delivery-address-select">
      <h3><%= f.label :address, "お届け先" %></h3>
        <div class="row ml-5">
          <div class="col-lg-8">
            <%= f.radio_button :address_option, 0, checked: "checked" %>
            <%= f.label :address, "ご自身の住所" %>
            <br>
            <%= @customer.postal_code.to_s.insert(3, "-") %><br/>
            <%= @customer.address %><br/>
            <%= @customer.last_name %><%= @customer.first_name %>
          </div>
          <div class="col-lg-8 mt-2">
      <%= f.radio_button :address_option, 1 %>
      <%= f.label :address, "登録済住所から選択" %>
      <br>
      <%= f.collection_select :id, @addresses, :id, :address,{prompt: "選択してください"},class: "form-control" %>
          </div>
          <div class="col-lg-8 mt-2">
      <%= f.radio_button :address_option, 2 %>
      <%= f.label :address, "新しいお届け先" %>
      <br>
      <div class="row">
          <div class="col-lg-4">
            <%= f.label :address, "郵便番号(ハイフンなし）" %>
          </div>
          <div>
            <%= f.text_field :postal_code, :size=>"30" %>
          </div>
      </div>
      </br>
      <div class="row">
          <div class="col-lg-4">
            <%= f.label :address, "住所" %>
          </div>
          <div>
            <%= f.text_field :address, :size=>"50" %>
          </div>
      </div>
      </br>
      <div class="row">
          <div class="col-lg-4">
            <%= f.label :address, "宛名" %>
          </div>
          <div>
            <%= f.text_field :name, :size=>"30"%>
          </div>
      </div>
      <br>
      <div class="text-center mb-5">
      <%= f.submit "確認画面へ進む", class:"btn btn-lg btn-primary" %>
      </div>

      </div>
    </div>
  <% end %>
</div>

</div>
</main>