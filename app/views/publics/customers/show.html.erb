<h1>マイページ</h1>

<h3>登録情報</h3>
<%= link_to "編集する", edit_publics_customer_path(@customer.id), class:"btn btn-sm btn-success" %>

<% @customers.each do |customers| %>

  <p>氏名</p>
  <%= customers.last_name %>　<%= customers.first_name %>

  <p>カナ</p>
  <%= customers.last_name_kana %>　<%= customers.first_name_kana %>

  <p>郵便番号</p>
  <%= customers.postal_code %>

  <p>住所</p>
  <%= customers.address %>

  <p>電話番号</p>
  <%= customers.telephone_number %>

  <p>メールアドレス</p>
  <%= customers.email %>


<% end %>

<h3>配送先</h3><%= link_to "一覧を見る", publics_addresses_path(@customer.id), class:"btn btn-sm btn-success" %>

<h3>注文履歴</h3><%= link_to "一覧を見る", publics_orders_path(@customer.id), class:"btn btn-sm btn-success" %>
