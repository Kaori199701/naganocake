<main>
<div class="container">

  <div class="display-2 ml-5 mt-4 pb-3">
    <h3>マイページ</h3>
  </div>

<h3 class=inline-block_items_title>登録情報　</h3>
<%= link_to "編集する", edit_publics_customer_path(@customer.id), class:"btn btn-sm btn-success" %>

<div class="mypage_list">
  <table>
    <tbody>
      <tr>
        <th style="width: 50%">氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
</div>

<h3 class=inline-block_items_title>配送先　　</h3>
<%= link_to "一覧を見る", publics_addresses_path(@customer.id), class:"btn btn-sm btn-primary" %><br>

<h3 class=inline-block_items_title>注文履歴　</h3>
<%= link_to "一覧を見る", publics_orders_path(@customer.id), class:"btn btn-sm btn-primary" %>

</div>
</main>