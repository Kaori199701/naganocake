<main>
<div class="container">

  <div class="display-2 ml-5 mt-4 pb-3">
    <h3>会員情報編集</h3>
  </div>

<%= form_with model: @customer, url: publics_customer_path(@customer.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.telephone_field :telephone_number %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>
  <br>

  <u class="new_botton ml-5">
    <%= f.submit '編集内容を保存', class:"btn btn-success" %>
  </u>


  <%= link_to "退会する", publics_unsubscribe_path(@customer.id), class:"btn btn-danger" %>

<% end %>

</div>
</main>