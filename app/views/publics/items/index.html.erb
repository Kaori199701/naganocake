<main>
<div class="container">
  <div class="row">

    <div class="col-md-2 mt-4">
      <%= render 'publics/genre', post_images: @genres %>
    </div>

    <div class="col-md-10 mt-4">
      <h3 class=inline-block_items_title>商品一覧</h3>
      <h4 class=inline-block_items_title> （全<%= @items.count %>件） </h4>
        <div class="customers_items-list">
          <% @items.each do |item| %>
            <% if item.is_active == true %>
              <div class="items-list-each">
                <%= image_tag item.get_image, :size =>"190x150" %><br>
                <%= link_to item.item_name, publics_item_path(item.id) %><br>
                ￥<%= item.price %>
              </div>
            <% end %>
          <% end %>
        </div>
      <%= paginate @items %>
    </div>
  </div>
</div>
</main>